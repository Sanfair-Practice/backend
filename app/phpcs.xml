<?xml version="1.0"?>
<ruleset>
    <arg name="basepath" value="."/>

    <file>./app</file>
    <file>./bootstrap/app.php</file>
    <file>./config</file>
    <file>./database</file>
    <file>./resources</file>
    <file>./routes</file>
    <file>./tests</file>

    <exclude-pattern>*/*.blade.php</exclude-pattern>
    <rule ref="PSR1.Classes.ClassDeclaration">
        <exclude-pattern>*/migrations/*</exclude-pattern>
    </rule>

    <rule  ref="PSR12"/>
</ruleset>
